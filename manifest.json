{
  "manifest_version": 3,
  "name": "Milifaru DOMPicker",
  "version": "1.0.0",
  "description": "Enable/disable DOMPick.",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_icon": {
      "16": "icons/off/16.png",
      "32": "icons/off/32.png",
      "48": "icons/off/48.png",
      "128": "icons/off/128.png"
    },
    "default_title": "Milifaru DOMPicker"
  },
  "icons": {
    "16": "icons/off/16.png",
    "32": "icons/off/32.png",
    "48": "icons/off/48.png",
    "128": "icons/off/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/toggle-listener.js"],
      "run_at": "document_start"
    }
  ]
}
